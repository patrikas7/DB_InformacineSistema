@model _2_Laboras.ViewModels.zaidMainViewModel

@{
    ViewBag.Title = "Žaidėjai";
}

<h2>Žaidėjai</h2>
<p><b>Parengta:</b> @DateTime.Now</p>

@using (Html.BeginForm())
{
<div class="form-group">
    <label>Kontraktas nuo: </label>
    @Html.EditorFor(model => model.nuo, new { @class = "date-picker" })
    <label>Kontraktas iki: </label>
    @Html.EditorFor(model => model.iki, new { @class = "date-picker" })
    <input class="btn btn-primary action" type="submit" value="Atrinkti">
    <span style="float: right;">
        @Html.ActionLink("Naujas žaidėjas", "Create", "Zaidejas", new { @class = "btn btn-success" } )
    </span>
</div>
}

<table class="table">
    <tr style="background-color:lightblue">
        <th>
            @Html.DisplayNameFor(model => model.zaidejai[0].Vardas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.zaidejai[0].Pavarde)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.zaidejai[0].Amzius)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.zaidejai[0].Pozicija)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.zaidejai[0].Tautybe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.zaidejai[0].Komanda)
        </th>

        <th></th>
    </tr>

    @if (Model.zaidejai.Count == 0)
    {
        <tr>
            <td colspan="4" align="center"><b style="color:red;">Nurodytame laikotarpyje nei vienas žaidėjas neturi kontrakto</b></td>
        </tr>

    }

    @for (int i = 0; i < Model.zaidejai.Count; i++)
    {
        <tr>
            <td>@Model.zaidejai[i].Vardas</td>
            <td>@Model.zaidejai[i].Pavarde</td>
            <td>@Model.zaidejai[i].Amzius</td>
            <td>@Model.zaidejai[i].Pozicija</td>
            <td>@Model.zaidejai[i].Tautybe</td>
            <td>@Model.zaidejai[i].Komanda</td>
        </tr>
    }


</table>
