@model IEnumerable<_2_Laboras.Models.Treneris>

@{
    ViewBag.Title = "Treneriai";
}

<h2>Treneriai</h2>

<p>
    @Html.ActionLink("Nauajs treneris", "Create", "Treneris", new { @class="btn btn-success"})
</p>
<table class="table">
    <thead>
        <tr style="background-color: lightblue; ">
            <th>
                @Html.DisplayNameFor(model => model.Vardas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pavarde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tautybe)
            </th>
            <th style="width: 18%"></th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Vardas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pavarde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tautybe)
                </td>
                <td>
                    @Html.ActionLink("Redaguoti", "Edit", new { id = item.id }, new { @class = "btn btn-primary action" })
                    @Html.ActionLink("Šalinti", "Delete", new { id = item.id }, new { @class = "btn btn-danger action" })
                </td>
            </tr>
        }

</table>
